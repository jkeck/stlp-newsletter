<div class="modal hide" id="misc_contents" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Miscellaneous Contents for STLP Session <%= @newsletter.session %></h3>
  </div>
  <div class="modal-body">
    <div class="section">
      <%= form_for(MiscContent.new, :html => {:class => "misc_contents"}) do |f| %>
        <%= f.label :title, "Heading" %>
        <%= f.text_field :title %>
        <%= f.label :body %>
        <%= f.text_area :body, :rows => 10 %>
        <%= f.hidden_field(:newsletter_id, :value => @newsletter[:id]) unless @newsletter.blank?  %>
        <br/>
        <%= f.button :add, :class => "btn" %>
      <%- end -%>
    </div>
    <%- misc_contents.each do |content| -%>
      <div class="section">
        <%= form_for(content, :html => {:class => "misc_contents"}) do |f| %>
          <%= f.label :title, "Heading" %>
          <%= f.text_field :title %>
          <%= f.label :body %>
          <%= f.text_area :body, :rows => 10 %>
          <%= f.hidden_field(:newsletter_id, :value => @newsletter[:id]) unless @newsletter.blank?  %>
          <br/>
          <%= f.button :save, :class => "btn" %>
        <%- end -%>
      </div>
    <%- end -%>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>
</div>
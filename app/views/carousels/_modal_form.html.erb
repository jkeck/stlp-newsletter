<div class="modal hide" id="carousels" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Carousel Images for STLP Session <%= @newsletter.session %></h3>
  </div>
  <div class="modal-body">
    <%= form_for(Carousel.new, :html => {:class => "carousels form-inline"}) do |f| %>
      <%= f.label :image_url, "Image URL" %>
      <%= f.text_field :image_url %>
      <%= f.label :caption %>
      <%= f.text_field :caption %>
      <%= f.hidden_field(:newsletter_id, :value => @newsletter[:id]) unless @newsletter.blank?  %>
      <%= f.button :add, :class => "btn" %>
    <%- end -%>
    <%- carousels.each do |carousel| -%>
      <%= form_for(carousel, :html => {:class => "carousels form-inline"}) do |f| %>
        <%= f.label :image_url, "Image URL" %>
        <%= f.text_field :image_url %>
        <%= f.label :caption %>
        <%= f.text_field :caption %>
        <%= f.hidden_field(:newsletter_id, :value => @newsletter[:id]) unless @newsletter.blank?  %>
        <%= f.button :save, :class => "btn" %>
      <%- end -%>
    <%- end -%>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>
</div>
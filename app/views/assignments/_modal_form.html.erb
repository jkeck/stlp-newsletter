<div class="modal hide" id="assignments" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Assignments for STLP Session <%= @newsletter.session %></h3>
  </div>
  <div class="modal-body">
    <div class="section">
      <%= form_for(Assignment.new, :html => {:class => "assignments"}) do |f| %>
        <%= f.label :link %>
        <%= f.text_field :link %>
        <%= f.label :discription %>
        <%= f.text_area :description, :rows => "5" %>
        <%= f.hidden_field(:newsletter_id, :value => @newsletter[:id]) unless @newsletter.blank?  %>
        <br/>
        <%= f.button :add, :class => "btn" %>
      <%- end -%>
    </div>
    <%- assignments.each do |assignment| -%>
      <div class="section">
        <%= form_for(assignment, :html => {:class => "assignments"}) do |f| %>
          <%= f.label :link %>
          <%= f.text_field :link %>
          <%= f.label :discription %>
          <%= f.text_area :description, :rows => "5" %>
          <%= f.hidden_field(:newsletter_id, :value => @newsletter[:id]) unless @newsletter.blank?  %>
          <br/>
          <%= f.button :add, :class => "btn" %>
        <%- end -%>
      </div>
    <%- end -%>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>
</div>
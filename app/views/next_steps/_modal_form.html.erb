<%- next_steps ||= (@next_step || NextStep.new) -%>
<div class="modal hide" id="next_steps" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Next Steps for STLP Session <%= @newsletter.session %></h3>
  </div>
  <%= form_for(next_steps, :html => {:class => "next_steps"}) do |f| %>
    <div class="modal-body">
      <div>
        <%= f.label :body %>
        <%= f.text_area :body, :rows => 5 %>
      </div>
      <div>
        <%= f.label :steps, :class=>"with-help" %> <span class="help">(start new steps with * to create a numbered bullet)</span>
        <%= f.text_area :steps %>
      </div>
    </div>
    <%= f.hidden_field(:newsletter_id, :value => @newsletter[:id]) unless @newsletter.blank?  %>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      <button class="btn btn-primary">Save changes</button>
    </div>  
  <%- end -%>
</div>